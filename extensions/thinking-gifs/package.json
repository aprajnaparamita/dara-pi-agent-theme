  "main": "index.ts",
  "keywords": [
    "pi-coding-agent",
    "pi-extension",
    "visualization",
    "gif",
    "thinking",
    "animation"
  ],
  "author": "Dara",
  "license": "MIT",
  "peerDependencies": {
    "@mariozechner/pi-coding-agent": "*",
    "@mariozechner/pi-tui": "*"
  },
  "engines": {
